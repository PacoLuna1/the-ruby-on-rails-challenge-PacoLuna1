  <body>
  <h1 style="text-align:center">TODO</h1>
  <% @lists.each do |list| %>
  <h3><%= list.title %></h3>
  <table >
        <thead  >
          <tr>
            <th style="border: 1px solid;background-color: black;color:white;">Title</th>
            <th style="border: 1px solid;background-color: black;color:white;">Details</th>
            <th style="border: 1px solid;background-color: black;color:white;">Date</th>
            <th></th>
          </tr>
        </thead>
        <tbody >
        <% list.tasks.each do |task| %>
            <tr >
                <td style="border:1px solid;"><%= task.title %></td>
                <td style="border:1px solid;"><%= task.details %></td>
                <td style="border:1px solid;"><%= task.date %></td>
            </tr>
          <% end %> 
        </tbody>
      </table>
  <% end %>
  </body>
