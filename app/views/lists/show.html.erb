<div  >
  <%= image_tag('title-task.png', class:'position-absolute ', size:'400x200', style:'top:300px; left:750px') %>
  <%= image_tag('background-task.jpg', class:"w-100 ") %>
  <%= render 'layouts/header'%>
  <button class="btn btn-light bg-white position-absolute mb-5", style='width:600px;top:700px;left:650px'>
    <div class="row">
      <h2 class="col-md-11"><%= @list.title %></h2>
      <%= link_to( image_tag('edit.svg', size:"20x20"), edit_list_path(@list), class:"col-md-1 text-decoration-none bg-transparent") %>
    </div>
    <%= render partial: 'tasks/task', locals: {tasks: @list.tasks} %>
    <%= link_to(image_tag('plus.svg',style:"width:30px"), new_list_task_path(@list), class:"text-decoration-none bg-transparent" )  %>
    <hr/><br>
      <strong scope="col">Export to <%= link_to 'CSV', "#{list_tasks_path(@list)}.csv" %></Strong>
  </button>
</div>

