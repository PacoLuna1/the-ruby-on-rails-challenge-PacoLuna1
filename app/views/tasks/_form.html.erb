<div>
  <%= image_tag('background-task.jpg', class:"w-100 h-100") %>
  <%= render 'layouts/header'%>
  <button class="btn btn-light bg-white position-absolute w-25", style='top:300px;left:700px;'>
    <div class=" col-md-12 ">
      <%= form_with(model: [task.list, task], local: true) do |form| %>
       <% if task.errors.any? %>
          <% task.errors.full_messages.each do |message| %>
            <p class="btn btn-danger m-1 " ><%= message %></p>
          <% end %>
        <% end %>
        <h3>Title</h3>
          <%= form.text_field :title, class:"form-control w-100 p-3" %>
        <br/>
        <h3>Details</h3>
          <%= form.text_area :details, class:"form-control w-100 p-3" %>
        <br/>
        <div class="row m-0 d-flex justify-content-center">
          <%= form.date_select :date%>
        </div>
        <br/>
        <div class="actions">
          <%= form.submit class:"btn btn-success col-12" %>
        </div>
      <% end %>
    </div>
  </button>
</div>