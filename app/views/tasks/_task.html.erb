<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>details</th>
      <th>date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% tasks.each do |task| %>
    <tr>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td><%= task.date %></td>
        <td><%= link_to 'Destroy', [task.list, task],
                        method: :delete,
                        data: { confirm: 'Are you sure?'} %>
        </td>
        <td><%= link_to 'Edit',edit_list_task_path(task.list, task) %></td>
        <td><%= link_to 'Show',[task.list, task] %></td>
    </tr>
  <% end %>
</table>
 
